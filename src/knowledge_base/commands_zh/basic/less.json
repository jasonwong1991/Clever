{
  "name": "less",
  "description": "分页查看文件内容",
  "category": "文件查看",
  "usage": "less [选项] 文件...",
  "options": [
    {
      "option": "-N",
      "description": "显示行号"
    },
    {
      "option": "-S",
      "description": "不折行，水平滚动查看"
    },
    {
      "option": "-i",
      "description": "搜索时忽略大小写"
    },
    {
      "option": "+F",
      "description": "实时监控文件变化（类似tail -f）"
    }
  ],
  "examples": [
    {
      "command": "less file.txt",
      "description": "分页查看文件"
    },
    {
      "command": "less -N logfile.log",
      "description": "带行号查看文件"
    },
    {
      "command": "ps aux | less",
      "description": "分页查看命令输出"
    },
    {
      "command": "less +F /var/log/messages",
      "description": "实时监控日志文件"
    }
  ],
  "related_commands": ["more", "cat", "head", "tail"],
  "tags": ["分页查看", "文件查看", "实时监控"]
}