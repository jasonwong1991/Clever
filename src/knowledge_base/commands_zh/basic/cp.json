{
  "name": "cp",
  "description": "复制文件和目录",
  "category": "文件管理",
  "usage": "cp [选项] 源文件 目标文件",
  "options": [
    {
      "option": "-r",
      "description": "递归复制目录及其内容"
    },
    {
      "option": "-i",
      "description": "覆盖前提示确认"
    },
    {
      "option": "-v",
      "description": "显示复制过程信息"
    },
    {
      "option": "-p",
      "description": "保持文件属性（权限、时间等）"
    }
  ],
  "examples": [
    {
      "command": "cp file1.txt file2.txt",
      "description": "复制文件"
    },
    {
      "command": "cp -r dir1 dir2",
      "description": "递归复制目录"
    },
    {
      "command": "cp -i *.txt backup/",
      "description": "复制所有txt文件到backup目录"
    },
    {
      "command": "cp -p original.txt copy.txt",
      "description": "复制文件并保持属性"
    }
  ],
  "related_commands": ["mv", "ln", "rsync", "scp"],
  "tags": ["复制", "文件", "目录", "备份"]
}