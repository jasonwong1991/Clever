{
  "command": "pkill",
  "description": "根据进程名称或其他条件终止进程",
  "syntax": "pkill [选项] 模式",
  "category": "process_management",
  "options": [
    {
      "option": "-f",
      "description": "匹配完整的命令行，而不仅仅是进程名"
    },
    {
      "option": "-x",
      "description": "精确匹配进程名"
    },
    {
      "option": "-u 用户",
      "description": "只终止指定用户的进程"
    },
    {
      "option": "-g 组",
      "description": "只终止指定进程组的进程"
    },
    {
      "option": "-P 父进程ID",
      "description": "只终止指定父进程的子进程"
    },
    {
      "option": "-9",
      "description": "发送SIGKILL信号强制终止"
    },
    {
      "option": "-15",
      "description": "发送SIGTERM信号正常终止(默认)"
    },
    {
      "option": "-n",
      "description": "终止最新的匹配进程"
    },
    {
      "option": "-o",
      "description": "终止最旧的匹配进程"
    }
  ],
  "examples": [
    {
      "command": "pkill firefox",
      "description": "终止所有名为firefox的进程"
    },
    {
      "command": "pkill -u john",
      "description": "终止用户john的所有进程"
    },
    {
      "command": "pkill -f python.*test.py",
      "description": "终止命令行包含python和test.py的进程"
    },
    {
      "command": "pkill -9 chrome",
      "description": "强制终止所有chrome进程"
    },
    {
      "command": "pkill -x vim",
      "description": "精确匹配并终止名为vim的进程"
    }
  ],
  "related_commands": ["pgrep", "kill", "killall", "ps"],
  "tags": ["进程", "终止", "系统管理", "进程管理"]
}