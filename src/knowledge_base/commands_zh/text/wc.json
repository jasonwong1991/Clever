{
  "command": "wc",
  "description": "统计文件的行数、词数、字符数",
  "syntax": "wc [选项] [文件...]",
  "category": "text_processing",
  "options": [
    {
      "option": "-l",
      "description": "只显示行数"
    },
    {
      "option": "-w",
      "description": "只显示词数"
    },
    {
      "option": "-c",
      "description": "只显示字节数"
    },
    {
      "option": "-m",
      "description": "只显示字符数"
    },
    {
      "option": "-L",
      "description": "显示最长行的长度"
    }
  ],
  "examples": [
    {
      "command": "wc file.txt",
      "description": "显示文件的行数、词数、字节数"
    },
    {
      "command": "wc -l file.txt",
      "description": "只统计行数"
    },
    {
      "command": "wc -w file.txt",
      "description": "只统计词数"
    },
    {
      "command": "ls -1 | wc -l",
      "description": "统计当前目录文件数量"
    },
    {
      "command": "cat *.txt | wc -l",
      "description": "统计所有txt文件的总行数"
    },
    {
      "command": "ps aux | wc -l",
      "description": "统计运行的进程数量"
    },
    {
      "command": "wc -L file.txt",
      "description": "显示最长行的字符数"
    }
  ],
  "related_commands": ["cat", "grep", "cut", "sort"],
  "tags": ["文本", "统计", "行数", "词数", "字符数"]
}