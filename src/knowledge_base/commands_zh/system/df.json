{
  "command": "df",
  "description": "显示文件系统磁盘空间使用情况",
  "syntax": "df [选项] [文件系统]",
  "category": "system_info",
  "options": [
    {
      "option": "-h",
      "description": "以人类可读的格式显示(KB, MB, GB)"
    },
    {
      "option": "-T",
      "description": "显示文件系统类型"
    },
    {
      "option": "-i",
      "description": "显示inode使用情况"
    },
    {
      "option": "-a",
      "description": "显示所有文件系统，包括虚拟文件系统"
    },
    {
      "option": "-t 类型",
      "description": "只显示指定类型的文件系统"
    },
    {
      "option": "-x 类型",
      "description": "排除指定类型的文件系统"
    },
    {
      "option": "-l",
      "description": "只显示本地文件系统"
    },
    {
      "option": "--total",
      "description": "显示总计行"
    }
  ],
  "examples": [
    {
      "command": "df -h",
      "description": "以易读格式显示磁盘使用情况"
    },
    {
      "command": "df -T",
      "description": "显示文件系统类型和使用情况"
    },
    {
      "command": "df -i",
      "description": "显示inode使用情况"
    },
    {
      "command": "df /home",
      "description": "显示/home目录所在文件系统的使用情况"
    },
    {
      "command": "df -t ext4",
      "description": "只显示ext4文件系统"
    },
    {
      "command": "df -h --total",
      "description": "显示磁盘使用情况和总计"
    }
  ],
  "related_commands": ["du", "lsblk", "mount", "fdisk"],
  "tags": ["磁盘", "存储", "文件系统", "空间", "系统信息"]
}