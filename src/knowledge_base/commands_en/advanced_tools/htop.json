{
  "command": "htop",
  "description": "Interactive process monitor, enhanced version of top",
  "syntax": "htop [options]",
  "category": "advanced_tools",
  "options": [
    {
      "option": "-d delay",
      "description": "Set refresh delay time in seconds"
    },
    {
      "option": "-u user",
      "description": "Show only processes of specified user"
    },
    {
      "option": "-p PID",
      "description": "Show only specified process ID"
    },
    {
      "option": "-s column",
      "description": "Sort by specified column"
    },
    {
      "option": "-C",
      "description": "Use monochrome display"
    },
    {
      "option": "-h",
      "description": "Show help information"
    }
  ],
  "examples": [
    {
      "command": "htop",
      "description": "Start htop process monitor"
    },
    {
      "command": "htop -u root",
      "description": "Show only root user processes"
    },
    {
      "command": "htop -d 5",
      "description": "Refresh every 5 seconds"
    },
    {
      "command": "htop -p 1234",
      "description": "Monitor process ID 1234"
    }
  ],
  "interactive_keys": [
    {
      "key": "F9 or k",
      "description": "Kill process"
    },
    {
      "key": "F6 or </>",
      "description": "Select sort column"
    },
    {
      "key": "F4 or \\",
      "description": "Filter processes"
    },
    {
      "key": "F5 or t",
      "description": "Tree view"
    },
    {
      "key": "Space",
      "description": "Tag process"
    },
    {
      "key": "u",
      "description": "Show user processes"
    }
  ],
  "related_commands": ["top", "ps", "pgrep", "iotop"],
  "tags": ["process", "monitor", "interactive", "performance", "CPU", "memory"]
}