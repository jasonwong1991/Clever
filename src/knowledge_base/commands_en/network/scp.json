{
  "name": "scp",
  "description": "Securely copy files to remote hosts",
  "category": "Remote Access",
  "usage": "scp [options] source_file target_file",
  "options": [
    {
      "option": "-r",
      "description": "Recursively copy directories"
    },
    {
      "option": "-p",
      "description": "Preserve file attributes and timestamps"
    },
    {
      "option": "-P",
      "description": "Specify SSH port"
    },
    {
      "option": "-v",
      "description": "Display verbose transfer information"
    }
  ],
  "examples": [
    {
      "command": "scp file.txt user@server.com:/home/user/",
      "description": "Upload file to remote server"
    },
    {
      "command": "scp user@server.com:/path/to/file.txt .",
      "description": "Download file from remote server"
    },
    {
      "command": "scp -r localdir/ user@server.com:/remote/path/",
      "description": "Recursively upload directory"
    },
    {
      "command": "scp -P 2222 file.txt user@server.com:/home/",
      "description": "Transfer file on specific port"
    }
  ],
  "related_commands": ["ssh", "rsync", "sftp", "wget"],
  "tags": ["file transfer", "remote copy", "secure transfer"]
}