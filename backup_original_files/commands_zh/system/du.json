{
  "command": "du",
  "description": "显示目录和文件的磁盘使用量",
  "syntax": "du [选项] [文件或目录]",
  "category": "system_info",
  "options": [
    {
      "option": "-h",
      "description": "以人类可读的格式显示(KB, MB, GB)"
    },
    {
      "option": "-s",
      "description": "只显示总计，不显示子目录"
    },
    {
      "option": "-a",
      "description": "显示所有文件和目录的大小"
    },
    {
      "option": "-c",
      "description": "显示总计"
    },
    {
      "option": "-d 深度",
      "description": "限制显示的目录深度"
    },
    {
      "option": "-x",
      "description": "不跨越文件系统边界"
    },
    {
      "option": "--max-depth=N",
      "description": "最大显示N层目录深度"
    },
    {
      "option": "--exclude=模式",
      "description": "排除匹配模式的文件"
    }
  ],
  "examples": [
    {
      "command": "du -h /home",
      "description": "显示/home目录的磁盘使用量"
    },
    {
      "command": "du -sh *",
      "description": "显示当前目录下所有项目的总大小"
    },
    {
      "command": "du -h --max-depth=1",
      "description": "只显示一级子目录的大小"
    },
    {
      "command": "du -ah /var/log",
      "description": "显示/var/log下所有文件的大小"
    },
    {
      "command": "du -ch *.txt",
      "description": "显示所有txt文件大小和总计"
    },
    {
      "command": "du -h --exclude='*.tmp' /tmp",
      "description": "显示/tmp大小，排除tmp文件"
    }
  ],
  "related_commands": ["df", "ls", "find", "ncdu"],
  "tags": ["磁盘", "大小", "目录", "文件", "存储分析"]
}