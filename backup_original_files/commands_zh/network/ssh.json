{
  "name": "ssh",
  "description": "安全远程登录和命令执行",
  "category": "远程访问",
  "usage": "ssh [选项] 用户名@主机名",
  "options": [
    {
      "option": "-p",
      "description": "指定连接端口"
    },
    {
      "option": "-i",
      "description": "指定私钥文件"
    },
    {
      "option": "-X",
      "description": "启用X11转发"
    },
    {
      "option": "-v",
      "description": "显示详细的连接信息"
    }
  ],
  "examples": [
    {
      "command": "ssh user@server.com",
      "description": "远程登录服务器"
    },
    {
      "command": "ssh -p 2222 user@server.com",
      "description": "指定端口连接"
    },
    {
      "command": "ssh -i ~/.ssh/mykey user@server.com",
      "description": "使用指定私钥连接"
    },
    {
      "command": "ssh user@server.com 'ls -la'",
      "description": "远程执行命令"
    }
  ],
  "related_commands": ["scp", "sftp", "rsync", "telnet"],
  "tags": ["远程访问", "安全连接", "命令执行"]
}