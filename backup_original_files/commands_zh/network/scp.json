{
  "name": "scp",
  "description": "安全地复制文件到远程主机",
  "category": "远程访问",
  "usage": "scp [选项] 源文件 目标文件",
  "options": [
    {
      "option": "-r",
      "description": "递归复制目录"
    },
    {
      "option": "-p",
      "description": "保持文件属性和时间戳"
    },
    {
      "option": "-P",
      "description": "指定SSH端口"
    },
    {
      "option": "-v",
      "description": "显示详细的传输信息"
    }
  ],
  "examples": [
    {
      "command": "scp file.txt user@server.com:/home/user/",
      "description": "上传文件到远程服务器"
    },
    {
      "command": "scp user@server.com:/path/to/file.txt .",
      "description": "从远程服务器下载文件"
    },
    {
      "command": "scp -r localdir/ user@server.com:/remote/path/",
      "description": "递归上传目录"
    },
    {
      "command": "scp -P 2222 file.txt user@server.com:/home/",
      "description": "指定端口传输文件"
    }
  ],
  "related_commands": ["ssh", "rsync", "sftp", "wget"],
  "tags": ["文件传输", "远程复制", "安全传输"]
}