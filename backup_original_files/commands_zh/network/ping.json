{
  "name": "ping",
  "description": "测试网络连接性",
  "category": "网络工具",
  "usage": "ping [选项] 目标主机",
  "options": [
    {
      "option": "-c",
      "description": "指定发送的数据包数量"
    },
    {
      "option": "-i",
      "description": "设置发送间隔（秒）"
    },
    {
      "option": "-s",
      "description": "设置数据包大小（字节）"
    },
    {
      "option": "-W",
      "description": "设置超时时间（毫秒）"
    }
  ],
  "examples": [
    {
      "command": "ping google.com",
      "description": "测试到Google的连接"
    },
    {
      "command": "ping -c 4 192.168.1.1",
      "description": "发送4个数据包测试连接"
    },
    {
      "command": "ping -i 2 -c 5 example.com",
      "description": "每2秒发送一次，发送5次"
    },
    {
      "command": "ping -s 1000 localhost",
      "description": "发送1000字节的大数据包"
    }
  ],
  "related_commands": ["traceroute", "nslookup", "dig", "netstat"],
  "tags": ["网络测试", "连接性", "延迟", "ICMP"]
}