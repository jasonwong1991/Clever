{
  "name": "ls",
  "description": "列出目录内容",
  "category": "文件管理",
  "usage": "ls [选项] [目录]",
  "options": [
    {
      "option": "-l",
      "description": "以长格式显示详细信息"
    },
    {
      "option": "-a",
      "description": "显示所有文件，包括隐藏文件"
    },
    {
      "option": "-h",
      "description": "以人类可读格式显示文件大小"
    },
    {
      "option": "-t",
      "description": "按修改时间排序"
    },
    {
      "option": "-r",
      "description": "逆序显示"
    },
    {
      "option": "-R",
      "description": "递归显示子目录"
    }
  ],
  "examples": [
    {
      "command": "ls",
      "description": "列出当前目录的文件和文件夹"
    },
    {
      "command": "ls -la",
      "description": "以详细格式列出所有文件（包括隐藏文件）"
    },
    {
      "command": "ls -lh",
      "description": "以人类可读格式显示文件大小"
    },
    {
      "command": "ls -lt",
      "description": "按修改时间排序显示文件"
    }
  ],
  "related_commands": ["cd", "pwd", "find", "tree"],
  "tags": ["文件", "目录", "列表", "查看"]
}