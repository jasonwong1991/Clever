{
  "name": "rm",
  "description": "删除文件和目录",
  "category": "文件管理",
  "usage": "rm [选项] 文件...",
  "options": [
    {
      "option": "-r",
      "description": "递归删除目录及其内容"
    },
    {
      "option": "-f",
      "description": "强制删除，不提示确认"
    },
    {
      "option": "-i",
      "description": "删除前提示确认"
    },
    {
      "option": "-v",
      "description": "显示删除过程信息"
    }
  ],
  "examples": [
    {
      "command": "rm file.txt",
      "description": "删除文件"
    },
    {
      "command": "rm -rf directory",
      "description": "强制递归删除目录"
    },
    {
      "command": "rm -i *.txt",
      "description": "交互式删除所有txt文件"
    },
    {
      "command": "rm -v file1 file2",
      "description": "删除多个文件并显示过程"
    }
  ],
  "related_commands": ["rmdir", "mv", "cp", "ls"],
  "tags": ["删除", "文件", "目录", "强制"]
}