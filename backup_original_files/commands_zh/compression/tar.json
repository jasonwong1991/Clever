{
  "command": "tar",
  "description": "打包和解包文件，支持多种压缩格式",
  "syntax": "tar [选项] [文件名] [文件/目录...]",
  "category": "compression",
  "options": [
    {
      "option": "-c",
      "description": "创建新的归档文件"
    },
    {
      "option": "-x",
      "description": "提取归档文件内容"
    },
    {
      "option": "-t",
      "description": "列出归档文件内容"
    },
    {
      "option": "-v",
      "description": "详细显示处理的文件"
    },
    {
      "option": "-f 文件名",
      "description": "指定归档文件名"
    },
    {
      "option": "-z",
      "description": "使用gzip压缩(.tar.gz)"
    },
    {
      "option": "-j",
      "description": "使用bzip2压缩(.tar.bz2)"
    },
    {
      "option": "-J",
      "description": "使用xz压缩(.tar.xz)"
    },
    {
      "option": "-C 目录",
      "description": "切换到指定目录"
    },
    {
      "option": "--exclude=模式",
      "description": "排除匹配模式的文件"
    }
  ],
  "examples": [
    {
      "command": "tar -czf backup.tar.gz /home/user",
      "description": "创建gzip压缩的归档文件"
    },
    {
      "command": "tar -xzf backup.tar.gz",
      "description": "解压gzip归档文件"
    },
    {
      "command": "tar -tjf backup.tar.bz2",
      "description": "列出bzip2归档文件内容"
    },
    {
      "command": "tar -xf archive.tar -C /tmp",
      "description": "解压到/tmp目录"
    },
    {
      "command": "tar -czf project.tar.gz --exclude='*.log' project/",
      "description": "打包项目目录，排除log文件"
    },
    {
      "command": "tar -cf - . | ssh user@host 'cd /backup && tar -xf -'",
      "description": "通过SSH传输并解压"
    }
  ],
  "related_commands": ["gzip", "zip", "7z", "compress"],
  "tags": ["压缩", "打包", "归档", "备份", "gzip", "bzip2"]
}