{
  "name": "chown",
  "description": "修改文件和目录的所有者和组",
  "category": "权限管理",
  "usage": "chown [选项] 所有者[:Group] 文件...",
  "options": [
    {
      "option": "-R",
      "description": "递归修改目录及其内容的所有者"
    },
    {
      "option": "-v",
      "description": "显示修改过程信息"
    },
    {
      "option": "-c",
      "description": "仅在所有者发生变化时显示信息"
    },
    {
      "option": "--reference",
      "description": "参照另一个文件的所有者"
    }
  ],
  "examples": [
    {
      "command": "chown user file.txt",
      "description": "修改文件所有者"
    },
    {
      "command": "chown user:group file.txt",
      "description": "同时修改所有者和组"
    },
    {
      "command": "chown -R www-data:www-data /var/www/",
      "description": "递归修改目录所有者"
    },
    {
      "command": "chown :admin file.txt",
      "description": "仅修改组所有者"
    }
  ],
  "related_commands": ["chmod", "chgrp", "ls", "stat"],
  "tags": ["所有者", "组", "权限", "修改"]
}