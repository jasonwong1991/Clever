{
  "name": "chown",
  "description": "Change file and directory ownership",
  "category": "Permission Management",
  "usage": "chown [options] owner[:group] file...",
  "options": [
    {
      "option": "-R",
      "description": "Recursively change ownership of directories and their contents"
    },
    {
      "option": "-v",
      "description": "Display verbose information about ownership changes"
    },
    {
      "option": "-c",
      "description": "Only display information when ownership is changed"
    },
    {
      "option": "--reference",
      "description": "Use ownership of another file as reference"
    }
  ],
  "examples": [
    {
      "command": "chown user file.txt",
      "description": "Change file owner"
    },
    {
      "command": "chown user:group file.txt",
      "description": "Change both owner and group"
    },
    {
      "command": "chown -R www-data:www-data /var/www/",
      "description": "Recursively change directory ownership"
    },
    {
      "command": "chown :admin file.txt",
      "description": "Change only group ownership"
    }
  ],
  "related_commands": ["chmod", "chgrp", "ls", "stat"],
  "tags": ["ownership", "group", "permissions", "modify"]
}