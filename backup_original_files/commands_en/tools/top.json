{
  "name": "top",
  "description": "Display real-time running process information",
  "category": "System Monitoring",
  "usage": "top [options]",
  "options": [
    {
      "option": "-d",
      "description": "Set refresh interval (seconds)"
    },
    {
      "option": "-p",
      "description": "Show only specified process ID"
    },
    {
      "option": "-u",
      "description": "Show only processes for specified user"
    },
    {
      "option": "-n",
      "description": "Set number of updates before exiting"
    }
  ],
  "examples": [
    {
      "command": "top",
      "description": "Real-time view of system processes"
    },
    {
      "command": "top -d 1",
      "description": "Refresh every second"
    },
    {
      "command": "top -u username",
      "description": "Show only processes for specified user"
    },
    {
      "command": "top -n 5",
      "description": "Exit after 5 updates"
    }
  ],
  "related_commands": ["ps", "htop", "kill", "jobs"],
  "tags": ["processes", "real-time monitoring", "system resources", "CPU"]
}